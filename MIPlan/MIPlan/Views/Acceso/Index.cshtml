
@{
    ViewBag.Title = "Index";
}

<div class="" ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl">
    <div class="row py-md-5">
        <div class="col-md-12 py-md-5 d-flex justify-content-center">
            <div class="text-center">
                <img src="~/Imagenes/MiPlan logo medio.png" />
                <div class="caption py-0" style="position:relative;top:-25%">
                    <input type="button" class="btn btn-primary" value="Iniciar Sesión" data-toggle="modal" data-target="#exampleModal" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Iniciar Sesión</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Usuario</span>
                        </div>
                        <input style="max-width:100%" type="text" class="form-control" placeholder="Usuario" aria-label="Username" aria-describedby="basic-addon1" ng-model="ctrl.Usuario">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Contraseña</span>
                        </div>
                        <input style="max-width:100%" type="password" class="form-control" placeholder="Contraseña" aria-label="Password" aria-describedby="basic-addon1" ng-model="ctrl.Contrasena">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Ejercicio</span>
                        </div>
                        <select class="custom-select" style="max-width:100%" ng-model="ctrl.Ejercicio">
                            <option value="2019">2019</option>
                            <option value="2018">2018</option>
                            <option value="2017">2017</option>
                            <option value="2016">2016</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" ng-click="ctrl.IniciarSesion()">Iniciar Sesión</button>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/global.js"></script>
@*<script src="~/Scripts/angular.ng-modules.js"></script>*@
<script src="~/Scripts/Controllers/AccesoController.js"></script>
<script src="~/Scripts/Models/AccesoModel.js"></script>