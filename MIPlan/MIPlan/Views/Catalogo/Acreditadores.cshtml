@{
    ViewBag.Title = "Acreditadores";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";
}
<h2>Acreditadores</h2>
<br />
<br />
<br />
<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">
    <div class="container">
        <div class="form-row">
            <div class="col-sm-12 col-md-7 col-lg-6 col-xl-6">
                <label for="lbldependencia" class="text-primary">Dependencia:</label>


                <select class="form-control" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                    <option value="">--Seleccionar Dependencia--</option>
                </select>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblStatus"  class="text-primary">Busqueda</label>
                    <input type="text" class="form-control" placeholder="Busqueda" ng-model="buscar">

                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default panel-table">
        @*<h3 class="panel-title input-group-text">Viaticos Asignados</h3><input type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" />Nuevo<i class="fa fa-plus" aria-hidden="true"></i>*@
        <div class="panel-heading">
            <div class="container">
                <div class="col text-right">
                    <button type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#acreditadores" style="width:80px"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                    <br />
                    <br />

                    <!-- Modal -->
                </div>
            </div>
            <div class="modal fade" id="acreditadores" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Acreditaciones</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label for="lblcarrera">Dependencia:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    <select class="form-control" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia2" ng-change="ctrl.CargarCarre()">
                                        <option value="">--Elegir Dependencia--</option>
                                    </select>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label for="lblcarrera">Carrera:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    @*<input type="text" class="form-control" placeholder="" ng-model="ctrl.unidad[0].Carrera">*@
                                    <select class="form-control" name="cmbCarrera"  ng-options="option.Id as option.Descripcion for option in ctrl.carrera" ng-model="ctrl.cve_carrera">
                                        <option value="">--Elegir Carrera--</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-6">
                                    <label for="lblorganismo">Organismo:</label>
                                    <select class="form-control" name="cmbOrganismo" ng-model="ctrl.unidad[0].Organismo">
                                        <option value="0">CACECA</option>
                                        <option value="1">CONAIC</option>
                                    </select>
                                </div>
                                <div class="form-inline col-md-6">
                                    <label for="lblfechainicio">Fecha Inicio:</label>
                                    <input class="form-control" name="txtFechaInicio" type="date" ng-model="ctrl.unidad[0].Fecha_Inicial" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-6">
                                    <label for="lblfechafin">Fecha Fin:</label>
                                    <input class="form-control" name="txtFechaFin" type="date" ng-model="ctrl.unidad[0].Fecha_Final" />
                                </div>
                                <div class="form-inline col-md-6">
                                    <label for="lblStatus">Status:</label>
                                    <select class="form-control" name="cmbStatus" ng-model="ctrl.unidad[0].Status">
                                        <option value="0">CONSOLIDADO</option>
                                        <option value="1">EN TRAMITE</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label for="lblcarrera">Observaciones:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    <input type="text" class="form-control" placeholder="" ng-model="ctrl.unidad[0].Observacion">

                                </div>
                            </div>
                            <br />
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                                <button type="button" class="btn btn-primary" ng-click="ctrl.AcreditadorCreate()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            </div>

        </div>
        <!-- Modal  UPDATE-->

        <div class="modal fade" id="UPDATEacreditadores" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Actualizar Acreditación</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-inline col-md-3">
                                <label for="lblcarrera">Dependencia:</label>
                            </div>
                            <div class="form-inline col-md-1 col-xl-9">
                                <select class="form-control" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.unidad[0].Dependencia" >
                                    <option value="">--Elegir Dependencia--</option>
                                </select>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="form-inline col-md-3">
                                <label for="lblcarrera">Carrera:</label>
                            </div>
                            <div class="form-inline col-md-1 col-xl-9">
                                <input type="text" class="form-control" placeholder="" ng-model="ctrl.unidad[0].Carrera">
                                @*<select class="form-control" name="cmbCarrera"  ng-options="option.Carrera for option in ctrl.carrera" ng-model="ctrl.cve_carrera">
                                    <option value="">--Elegir Carrera--</option>
                                </select>*@
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="form-inline col-md-6">
                                <label for="lblorganismo">Organismo:</label>
                                <select class="form-control" name="cmbOrganismo" ng-model="ctrl.unidad[0].Organismo">
                                    <option value="0">CACECA</option>
                                    <option value="1">CONAIC</option>
                                </select>
                            </div>
                            <div class="form-inline col-md-6">
                                <label for="lblfechainicio">Fecha Inicio:</label>
                                <input class="form-control" name="txtFechaInicio" type="date" ng-model="ctrl.unidad[0].Fecha_Inicial" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-inline col-md-6">
                                <label for="lblfechafin">Fecha Fin:</label>
                                <input class="form-control" name="txtFechaFin" type="date" ng-model="ctrl.unidad[0].Fecha_Final" />
                            </div>
                            <div class="form-inline col-md-6">
                                <label for="lblStatus">Status:</label>
                                <select class="form-control" name="cmbStatus" ng-model="ctrl.unidad[0].Status">
                                    <option value="0">CONSOLIDADO</option>
                                    <option value="1">EN TRAMITE</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-inline col-md-3">
                                <label for="lblcarrera">Observaciones:</label>
                            </div>
                            <div class="form-inline col-md-1 col-xl-9">
                                <input type="text" class="form-control" placeholder="" ng-model="ctrl.unidad[0].Observacion">

                            </div>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                            <button type="button" class="btn btn-primary" ng-click="ctrl.AcreditadorUpdate()">Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>

            <br />
        </div>






        <div class="container table-responsive" style="box-shadow: 10px 40px 96px #C8E7EC">
            <table id="Table" class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Dependencia</th>
                        <th scope="col">Carrera</th>
                        <th scope="col">Organismo</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col">Status</th>
                        <th scope="col">Observaciones</th>

                        <th style="text-align:center"><em class="fa fa-cog"></em></th>
                    </tr>
                </thead>
                <tbody ng-repeat="i in ctrl.acreditador | filter: buscar">
                    <tr>
                        <td>{{i.Id}}</td>
                        <td>{{i.Dependencia}}</td>
                        <td>{{i.Carrera}}</td>
                        <td>{{i.Organismo}}</td>
                        <td>{{i.Fecha_Inicial}}</td>
                        <td>{{i.Fecha_Final}}</td>
                        <td>{{i.Status}}</td>
                        <td>{{i.Observacion}}</td>

                        <td style="text-align:center">
                            <button type="button" class="btn" data-toggle="modal" data-target="#UPDATEacreditadores" ng-click="ctrl.Modal(i.Id)" style="width:50px">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger" ng-click="ctrl.Eliminar(i.Id)" style="width:50px">
                                <i class="fa fa-eraser" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>

                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th style="text-align:center">
                            <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                            </button>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/global.js"></script>
@*<script src="~/Scripts/angular.ng-modules.js"></script>*@
<script src="~/Scripts/Controllers/AcreditadorController.js"></script>
<script src="~/Scripts/Models/AcreditadorModel.js"></script>

















