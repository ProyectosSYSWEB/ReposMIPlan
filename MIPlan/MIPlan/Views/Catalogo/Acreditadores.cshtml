@{
    ViewBag.Title = "Acreditadores";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";
}
<h2>Acreditadores</h2>
<br />
<br />
<br />
<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">
    <div class="container">
        <div class="form-row">
            <div class="col-sm-12 col-md-7 col-lg-6 col-xl-6">
                <label for="lbldependencia" class="text-primary">Dependencia:</label>


                <select class="form-control border border-primary" title="Elegir Dependencia" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                    <option value="">--Seleccionar Dependencia--</option>  
                </select>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblStatus"  class="text-success">Busqueda</label>
                    <input type="text" class="form-control  border border-success" title="Buscar" placeholder="Busqueda" ng-model="buscar">

                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="container">
                <div class="col text-right">
                    <button type="button" id="Nuevo"  title="Nuevo"  class="btn btn-sm btn-success btn-create" data-toggle="modal" data-target="#acreditadores" style="width:120px" ng-click="ctrl.Nuevo()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                    <br />
                    <br />
              </div>
            </div>
            <div class="modal fade" id="acreditadores" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header justify-content-center">
                            <h5 class="modal-title" id="crear">Crear Acreditador</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label id="lbldependencia" for="lbldependencia"  class="text-success">Dependencia:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    <select id="cmbdependencia" class="form-control border border-success" name="cmbdependencia" required ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia" ng-change="ctrl.CargarCarreras()" >
                                        <option value="">--Elegir Dependencia--</option>
                                    </select>
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label id="lblcarrera" for="lblcarrera"  class="text-success">Carrera:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    @*<input type="text" class="form-control" placeholder="" ng-model="ctrl.unidad[0].Carrera">*@
                                    <select  id="cmbcarrera" class="form-control border border-success" name="cmbcarrera" required ng-options="option.Id as option.Descripcion for option in ctrl.carrera" ng-model="ctrl.cve_carrera">
                                        <option value="">--Elegir Carrera--</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-6">
                                    <label id="lblorganismo" for="lblorganismo"  class="text-success">Organismo:</label>
                                    @*<input id="cmborganismo"  type="text" class="form-control" placeholder="" ng-model="ctrl.cve_organismo">*@
                                    <select id="cmborganismo" class="form-control border border-success"  name="cmborganismo"  required ng-options="option.Id as option.Descripcion for option in ctrl.organismo" ng-model="ctrl.cve_organismo" ng-change="ctrl.CargarOrganismos()">
                                        <option value="">--Elegir Organismo--</option>
                                       
                                    </select>
                                </div>
                                <div class="form-inline col-md-6">
                                    <label id="lblfechainicio"  for="lblfechainicio"  class="text-success">Fecha Inicio:</label>
                                    <input id="txtfechainicio"  class="form-control border border-success"  name="txtfechainicio" required type="date" ng-model="ctrl.cve_fecha_inicio">
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-6">
                                    <label id="lblfechafin"  for="lblfechafin"  class="text-success">Fecha Fin:</label>
                                    <input id="txtfechafin"  class="form-control border border-success"  name="txtfechafin" required type="date" ng-model="ctrl.cve_fecha_fin">
                                </div>
                                <div class="form-inline col-md-6">
                                    <label id="lblstatus" for="lblstatus"  class="text-success">Status:</label>
                                    <select id="cmbstatus" class="form-control border border-success" name="cmbstatus" required ng-options="option.Id as option.Descripcion for option in ctrl.status" ng-model="ctrl.cve_status" ng-change="ctrl.CargarStatus()">
                                        <option value="">--Elegir Status--</option>

                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-inline col-md-3">
                                    <label id="lblobservacion"  for="lblobservacion"  class="text-success">Observaciones:</label>
                                </div>
                                <div class="form-inline col-md-1 col-xl-9">
                                    <input type="text" id="cmbobservacion" class="form-control border border-success" name="cmbobservacion" required placeholder="" ng-model="ctrl.cve_observacion">

                                </div>
                            </div>
                            <br />
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Salir</button>
                                <button type="button" id="btnNuevo" class="btn btn-success">Guardar</button>
                                <button type="button" id="btnActualizar" class="btn btn-primary" >Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            </div>

        </div>
     
        <div class="container table-responsive" style="box-shadow: 10px 40px 96px #C8E7EC">
            <table id="Table" class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Dependencia</th>
                        <th scope="col">Carrera</th>
                        <th scope="col">Organismo</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col">Status</th>
                        <th scope="col">Observaciones</th>

                        <th style="text-align:center"><em class="fa fa-cog"></em></th>
                    </tr>
                </thead>
                <tbody ng-repeat="i in ctrl.acreditador | filter: buscar">
                    <tr>
                        <td>{{i.Id}}</td>
                        <td>{{i.Dependencia}}</td>
                        <td>{{i.Carrera}}</td>
                        <td>{{i.Organismo}}</td>
                        <td>{{i.Fecha_Inicial}}</td>
                        <td>{{i.Fecha_Final}}</td>
                        <td>{{i.Status}}</td>
                        <td>{{i.Observacion}}</td>

                        <td style="text-align:center">
                            <button type="button" id="Actualizar" class="btn btn-primary" title="Editar" data-toggle="modal" data-target="#acreditadores" ng-click="ctrl.ObtenerDatos(i.Id)" style="width:50px">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger" title="Borrar" ng-click="ctrl.Eliminar(i.Id)" style="width:50px">
                                <i class="fa fa-eraser" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>

                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th style="text-align:center">
                            <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                            </button>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/global.js"></script>
@*<script src="~/Scripts/angular.ng-modules.js"></script>*@
<script src="~/Scripts/Controllers/AcreditadorController.js"></script>
<script src="~/Scripts/Models/AcreditadorModel.js"></script>

















