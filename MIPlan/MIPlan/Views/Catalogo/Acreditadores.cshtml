
@{
    ViewBag.Title = "Acreditadores";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";
}
    <br />
<h2>Acreditadores</h2>
<div class="panel panel-default panel-table">
    @*<h3 class="panel-title input-group-text">Viaticos Asignados</h3><input type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" />Nuevo<i class="fa fa-plus" aria-hidden="true"></i>*@
    <div class="panel-heading">
        <div class="row">
            <div class="col text-right">
                <button type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" style="width:80px"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                <br />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-inline col-md-2">
            <label style="font-size: 25px;">Dependencia:</label>
        </div>
    
        <div class="form-inline col-md-10">
            <select name="cmbDependencia"  style="margin-bottom: 0.3em;
    background-color: transparent;
    border: solid 1px blue;
    border-radius: 7px;
    padding: 0.5em;"  ng-change="ctrl.ObtenerTiposComprobacion()"  ng-model="ctrl.cve_dependencia">
                <option value="">--Seleccionar Dependencia--</option>
                <option value="">---------------------------</option>
            </select>
        </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Programa Educativa</th>
                    <th scope="col">Organismo</th>
                    <th scope="col">Inicio</th>
                    <th scope="col">Fin</th>
                    <th scope="col">Status</th>
                    <th scope="col">Acción</th>
                    <th style="text-align:center"><em class="fa fa-cog"></em></th>
                </tr>
            </thead>
            <tbody ng-repeat="i in ctrl.infImporteViaticos">
                <tr>
                    <td>{{i.Progrma Educativa}}</td>
                    <td>{{i.Organismo}}</td>
                    <td>{{i.Inicio}}</td>
                    <td>{{i.Fin}}</td>
                    <td>{{i.Status}}</td>
                    <td style="text-align:center">
                        <button type="button" class="btn" style="width:50px">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </button>

                        <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-eraser" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th style="text-align:center">
                        <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                        </button>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
















