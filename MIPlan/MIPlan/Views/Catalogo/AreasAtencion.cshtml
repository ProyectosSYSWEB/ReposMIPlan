
@{
    ViewBag.Title = "AreasAtencion";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";

}
<br />
<br />
<br />
<h2>Áreas De Atención</h2>
<br />
<br />

<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblDependencia">Dependencia:</label>
                    <select class="form-control" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblBusqueda" class="text-success">Busqueda</label>
                    <input type="text" class="form-control border border-success" ng-model="buscar">

                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="panel panel-default panel-table">
        @*<h3 class="panel-title input-group-text">Viaticos Asignados</h3><input type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" />Nuevo<i class="fa fa-plus" aria-hidden="true"></i>*@
        <div class="panel-heading">
            <div class="row">
                <div class="col text-right">
                    <button type="button" id="Nuevo" class="btn btn-success" data-toggle="modal" data-target="#areasatencion" style="width:80px" ng-click="ctrl.Nuevo()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                    <div class="modal fade" id="areasatencion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="Crear">Crear Área de Atención</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div">
                                        <div class="row">
                                            <div class="form-inline col-md-3">
                                                <label id="lblDependencia" for="lblDependencia" class="text-success">Dependencia:</label>
                                            </div>
                                            <div class="form-inline col-md-1">
                                                <select id="cmdDependencia" class="form-control border border-success" name="cmdDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                                                </select>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="form-inline col-md-3">
                                                <label id="lblClave" for="lblClave" class="text-success">Clave:</label>
                                            </div>
                                            <div class="form-inline col-md-1">
                                                <input id="txtClave" class="form-control border border-success" name="txtClave" ng-model="ctrl.cve_clave">
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="form-inline col-md-3">
                                                <label id="lblDescripcion" for="lblDescripcion" class="text-success">Descripción:</label>
                                            </div>
                                            <div class="form-inline col-md-1">
                                                <input id="txtDescripcion" class="form-control border border-success" name="txtDescripcion" type="text" ng-model="ctrl.cve_desc">
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="form-inline col-md-3">
                                                <label id="lblStatus" for="lblStatus" class="text-success">Status:</label>
                                            </div>
                                            <div class="form-inline col-md-1">
                                                <select id="cmdstatus" class="form-control border border-success" name="cmdstatus" ng-model="ctrl.cve_status">
                                                    <option value="A">Alta</option>
                                                    <option value="B">Baja</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="form-inline col-md-3">
                                                <label id="lblCategoria" for="lblCat" class="text-success">Categoria:</label>
                                            </div>
                                            <div class="form-inline col-md-1">
                                                <select id="cmdcat" class="form-control border border-success" name="cmdcat" ng-model="ctrl.cve_cat">
                                                </select>
                                            </div>
                                        </div>
                                    </div">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">Salir</button>
                                    <button type="button" id="btnNuevo" class="btn btn-success">Guardar</button>
                                    <button type="button" id="btnActualizar" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
        </div>

        


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Dependencia</th>
                    <th scope="col">Clave</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Status</th>
                    <th scope="col">Categoria</th>
                    <th style="text-align:center"><em class="fa fa-cog"></em></th>
                </tr>
            </thead>
            <tbody ng-repeat="i in ctrl.areasatencion">
                <tr>
                    <td>{{i.Id}}</td>
                    <td>{{i.Dependencia}}</td>
                    <td>{{i.Cve}}</td>
                    <td>{{i.Desc}}</td>
                    <td>{{i.Estatus}}</td>
                    <td>{{i.Cat}}</td>

                    <td style="text-align:center">
                        <button type="button" id="Actualizar" class="btn btn-primary btn-create" style="width:50px" data-toggle="modal" data-target="#areasatencion" ng-click="ctrl.ObtDatos(i.Id)">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </button>

                        <button type="button" class="btn btn-danger" ng-click="ctrl.EliminarAreaAtencion(i.Id)" style="width:50px">
                            <i class="fa fa-eraser" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th style="text-align:center">
                        <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                        </button>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/global.js"></script>
@*<script src="~/Scripts/angular.ng-modules.js"></script>*@
<script src="~/Scripts/Controllers/AreasAtencionController.js"></script>
<script src="~/Scripts/Models/AreasAtencionModel.js"></script>