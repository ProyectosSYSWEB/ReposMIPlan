
@{

    ViewBag.Title = "Basicos";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";

}
<br />

<h2>Basicos</h2>
<br />
<br />
<div class="panel panel-default panel-table">
    @*<h3 class="panel-title input-group-text">Viaticos Asignados</h3><input type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" />Nuevo<i class="fa fa-plus" aria-hidden="true"></i>*@
    <div class="panel-heading">
        <div class="row">            
            <div class="col text-right">
                <button type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" style="width:80px"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                <br />
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Catálogo</th>
                <th scope="col">Clave</th>
                <th scope="col">Organismo</th>
                <th scope="col">Status</th>
                <th style="text-align:center"><em class="fa fa-cog"></em></th>
            </tr>
        </thead>
        <tbody ng-repeat="i in ctrl.infImporteViaticos">
            <tr>
                <td>{{i.Catalogo}}</td>
                <td>{{i.Clave}}</td>
                <td>{{i.Organismo}}</td>
                <td>{{i.Status}}</td>
                <td style="text-align:center">
                    <button type="button" class="btn" style="width:50px">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>

                    <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                        <i class="fa fa-eraser" aria-hidden="true"></i>
                    </button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th style="text-align:center">
                    <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                        <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                    </button>
                    <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                        <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                    </button>
                </th>
            </tr>
        </tfoot>
    </table>
</div>

