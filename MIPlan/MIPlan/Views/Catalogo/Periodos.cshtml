        timepicker: false,
        format: 'd/m/Y'
    });
     $('#FinCreate').datetimepicker({
        timepicker: false,
        format: 'd/m/Y'
     });
     $('#InicioUpdate').datetimepicker({
        timepicker: false,
        format: 'd/m/Y'
     });
     $('#FinUpdate').datetimepicker({
        timepicker: false,
        format: 'd/m/Y'
    });
