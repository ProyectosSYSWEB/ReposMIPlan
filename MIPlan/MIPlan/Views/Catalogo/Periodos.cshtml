
@{
    ViewBag.Title = "Periodos";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";

}

<h2>Periodos</h2>
<br />
<br />
<br />

<div ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">
    <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
    <!-- Modal Update-->
    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="ModalPeriodo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form name="modalForm" novalidate>
                    <div id="title" class="">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close btn-danger" data-dismiss="modal" ng-click="ctrl.close(modalForm)" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblDependencia" class="">Dependencia:</label>
                            </div>
                            <div class="row justify-content-center">
                                <select id="cmbDependencia" class="" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.periodo[0].Dependencia" required>
                                    <option value="">--Seleccionar Dependencia--</option>
                                </select>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.cmbDependencia.$touched">
                                    <span ng-show="!ctrl.periodo[0].Dependencia" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblPeriodo" for="formGroupExampleInput" class="">Periodo</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" id="inputPeriodo" class="" name="Periodo" ng-model="ctrl.periodo[0].Periodo" placeholder="Periodo" required>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.Periodo.$touched">
                                    <span ng-show="!ctrl.periodo[0].Periodo" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblDescripcion" class="">Descripción</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" id="inputDescripcion" class="" name="Descripcion" ng-model="ctrl.periodo[0].Descripcion" placeholder="Descripción" required>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.Descripcion.$touched">
                                    <span ng-show="!ctrl.periodo[0].Descripcion" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblStatus" class="">Estatus</label>
                            </div>
                            <div class="row justify-content-center">
                                <select id="cmbStatus" class="" name="cmbDependencia_status" ng-model="ctrl.EStatus" required>
                                    <option value="A">Activo</option>
                                    <option value="B">Baja</option>
                                </select>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.cmbDependencia_status.$touched">
                                    <span ng-show="!ctrl.EStatus" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblEjercicio" class="">Ejercicio</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" id="inputEjercicio" class="" name="Ejercicio" ng-model="ctrl.Ejercicio" placeholder="Ejercicio" required>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.Ejercicio.$touched">
                                    <span ng-show="!ctrl.Ejercicio" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblInicio" class="">Inicio</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" class="" id="InicioUpdate" name="Inicio" ng-model="ctrl.periodo[0].Inicio" placeholder="Inicio" required>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.Inicio.$touched">
                                    <span ng-show="!ctrl.periodo[0].Inicio" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <div class="row justify-content-center">
                                <label id="lblFin" class="">Fin</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" class="" id="FinUpdate" name="Fin" ng-model="ctrl.periodo[0].Fin" placeholder="Fin" required>
                            </div>
                            <div class="row justify-content-center">
                                <span class="messages check-element animate-show-hide" ng-show="modalForm.$submitted || modalForm.Fin.$touched">
                                    <span ng-show="!ctrl.periodo[0].Fin" class="text-danger check-element animate-show-hide">Campo Requerido</span>
                                </span>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                            <br />
                            <div class="row justify-content-center">
                                <div id="ErrorModal" class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none">
                                    <strong id="MessageModal">¡Ha ocurrido un error! </strong>
                                    <button type="button" class="close" ng-click="ctrl.DivErrorModal()" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                            <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn btn-danger" ng-click="ctrl.close(modalForm)">Salir</button>
                        <button type="button" id="btnModal" class="btn" ng-click="ctrl.periodoUpdate(ctrl.periodo[0].Id); ctrl.reset(modalForm)" ng-disabled="modalForm.$invalid">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->

    <div class="container">

        <div id="Error" class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none">
            <strong id="Message">¡Ha ocurrido un error! </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="lblDependencia" class="text-primary">Dependencia:</label>
                    <select class="form-control border border-primary" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.depen" style="max-width:100%;">
                        <option value="">--Seleccionar Dependencia--</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="lblDependencia" class="text-info">Estatus:</label>
                    <select class="form-control border border-info" name="cmbDependencia" ng-change="ctrl.StatusFun()" ng-model="ctrl.Status.Status" style="max-width:100%;">
                        <option value="">--Seleccionar Estatus--</option>
                        <option value="Todos">Todos</option>
                        <option value="A">Alta</option>
                        <option value="B">Baja</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="lblStatus" class="text-success">Busqueda</label>
                    <input type="text" class="form-control border border-success" placeholder="Busqueda" ng-model="ctrl.buscar" style="max-width:100%;">
                </div>
            </div>
        </div>
    </div>
    <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="container">
                <div class="col text-right">
                    <button type="button" id="btnCrear" class="btn btn-sm btn-success btn-create" data-toggle="modal" data-target="#ModalPeriodo" accesskey=" " style="width:120px" ng-click="ctrl.Color()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                    <br />
                </div>
            </div>
        </div>
        <div class="container table-responsive" style="box-shadow: 10px 40px 96px rgba(0,0,0,.3)">
            <table class="table table-hover">
                <thead class="light-blue darken-3 text-white">
                    <tr>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Dependencia'; sortReverse = !sortReverse">
                                Dependencia
                                <span ng-class="sortType == 'Dependencia' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Dependencia' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Periodo'; sortReverse = !sortReverse">
                                Periodo
                                <span ng-class="sortType == 'Periodo' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Periodo' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Descripcion'; sortReverse = !sortReverse">
                                Descripción
                                <span ng-class="sortType == 'Descripcion' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Descripcion' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Status'; sortReverse = !sortReverse">
                                Estatus
                                <span ng-class="sortType == 'Status' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Status' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white"  href="" ng-click="sortType = 'Ejercicio'; sortReverse = !sortReverse">
                                Ejercicio
                                <span ng-class="sortType == 'Ejercicio' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Ejercicio' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Inicio'; sortReverse = !sortReverse">
                                Inicio
                                <span ng-class="sortType == 'Inicio' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Inicio' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>
                        <th scope="col">
                            <a  class="text-white" href="" ng-click="sortType = 'Fin'; sortReverse = !sortReverse">
                                Fin
                                <span ng-class="sortType == 'Fin' && !sortReverse ? 'fa fa-arrow-down' : sortType == 'Fin' && sortReverse ? 'fa fa-arrow-up': ''"></span>
                            </a>
                        </th>

                        <th scope="col" style="text-align:center"><em class="fa fa-cog"></em></th>
                    </tr>
                </thead>


                <tbody ng-pagination="i in ctrl.periodos | orderBy:sortType:sortReverse | filter:ctrl.buscar | filter:ctrl.Status | itemsPerPage: 5 " " >
                    <tr>
                        <td>{{i.Dependencia}}</td>
                        <td>{{i.Periodo}}</td>
                        <td>{{i.Descripcion}}</td>
                        <td>{{i.Status}}</td>
                        <td>{{i.Ejercicio}}</td>
                        <td>{{i.Inicio}}</td>
                        <td>{{i.Fin}}</td>


                        <td style="text-align:center">

                            <button type="button" id="btnUpdate" class="btn btn-primary" style="width:50px" data-toggle="modal" data-target="#ModalPeriodo" data-backdrop="static" data-keyboard="false" data-toggle="tooltip" data-html="true" title="Editar" ng-click="ctrl.Modal(i.Id)">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger" data-toggle="tooltip" data-html="true" title="Eliminar" ng-click="ctrl.EliminnarPeriodo(i.Id)" style="width:50px"><i class="fa fa-eraser" aria-hidden="true"></i></button>
                        </td>
                    </tr>
                </tbody>
                <!---->
                <tfoot>
                    <tr>
                        <th colspan="4"><ng-pagination-control boundary-links="true"></ng-pagination-control></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th style="text-align:center" colspan="1">
                            <button type="button" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Generar Reporte en Excel" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Generar Reporte en PDF" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                            </button>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>


</div>


<br />
<br />
<br />
<br />
<br />

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-pagination.js"></script>
<script src="~/Scripts/angular-animate.js"></script>
<script src="~/Scripts/global.js"></script>
