

@{
    ViewBag.Title = "Periodos";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";

}

<h2>Periodos</h2>
<br />
<br />
<br />


<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">

    <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 justify-content-center">
                <div class="form-group">
                    <label for="lblDependencia" class="text-primary">Dependencia</label>
                    <select class="form-control border border-primary" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                        <option value="">--Seleccionar Dependencia--</option>
                    </select>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="lblDependencia" class="text-info">Estatus</label>
                    <select class="form-control border border-info" name="cmbDependencia_status">
                        <option value="">--Seleccionar Estatus--</option>
                        <option value="A">Alta</option>
                        <option value="B">Baja</option>
                    </select>
                </div>
            </div>
            <div class=" col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="lblStatus" class="text-success">Busqueda</label>
                    <input type="text" class="form-control border border-success" placeholder="Busqueda" ng-model="buscar">
                </div>
            </div>
        </div>
    </div>

    <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->

    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="container">
                <div class="col text-right">
                    <button type="button" class="btn btn-sm btn-success btn-create" data-toggle="modal" data-target="#UnidadesResponsablesCreate" style="width:80px"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                    <br />
                </div>
            </div>
        </div>
        <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
        <div class="container table-responsive" style="box-shadow: 10px 40px 96px rgba(0,0,0,.3)">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Dependencia</th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Ejercicio'; sortReverse = !sortReverse">
                                Ejercicio
                            </a>
                        </th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Periodo'; sortReverse = !sortReverse">
                                Periodo
                            </a>
                        </th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Descripcion'; sortReverse = !sortReverse">
                                Descripción
                            </a>
                        </th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Status'; sortReverse = !sortReverse">
                                Estatus
                            </a>
                        </th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Inicio'; sortReverse = !sortReverse">
                                Inicio
                            </a>
                        </th>
                        <th scope="col">
                            <a href="" ng-click="sortType = 'Fin'; sortReverse = !sortReverse">
                                Fin
                            </a>
                        </th>

                        <th style="text-align:center"><em class="fa fa-cog"></em></th>
                    </tr>
                </thead>
                <tbody ng-repeat="i in ctrl.Periodo | orderBy:sortType:sortReverse | filter:buscar">
                    <tr>
                        <td>{{i.Dependencia}}</td>
                        <td>{{i.Periodo}}</td>
                        <td>{{i.Descripcion}}</td>
                        <td>{{i.Status}}</td>
                        <td>{{i.Ejercicio}}</td>
                        <td>{{i.Inicio}}</td>
                        <td>{{i.Fin}}</td>


                        <td style="text-align:center">
                            <!--data-toggle="modal" data-target="#UnidadesResponsables"-->
                            <button type="button" class="btn btn-primary" style="width:50px" data-toggle="modal" data-target="#UnidadesResponsablesUpdate" ng-click="ctrl.Modal(i.Id)">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button type="button" class="btn btn-danger" ng-click="ctrl.EliminnarUR(i.Id)" style="width:50px">
                                <i class="fa fa-eraser" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th style="text-align:center">
                            <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico()" style="width:50px">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                            </button>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
<!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
    </div>

</div>

<br />
<br />
<br />
<br />
<br />

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/global.js"></script>
