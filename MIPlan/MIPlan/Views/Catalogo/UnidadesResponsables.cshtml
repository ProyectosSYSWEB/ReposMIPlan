<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">

    <!-- Modal -->
    <div class="modal fade" id="UnidadesResponsables" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header btn-primary">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                                                                
                    <div class="container-fluid">
                                    

                            <!-- <div class="row justify-content-center">
        <label for="formGroupExampleInput" class="text-primary">Dependencia</label>
    </div>
    <div class="row justify-content-center">
        <input type="text" class="form-control" id="formGroupExampleInput" ng-model="item.Dependencia" placeholder="Dependencia">
    </div>
     -->
                            <div class="row justify-content-center">
                                <label for="lblDependencia" class="text-primary">Dependencia:</label>
                            </div>
                            <div class="row justify-content-center">
                                <select class="form-control" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.unidad[0].Dependencia">
                                    <option selected value="0">--Seleccionar Dependencia--</option>
                                </select>
                            </div>

                            <div class="row justify-content-center">
                                <label for="formGroupExampleInput" class="text-primary">Clave</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" class="form-control" id="formGroupExampleInput"  ng-model="ctrl.unidad[0].Clave" placeholder="Clave">
                            </div>

                            <div class="row justify-content-center">
                                <label for="formGroupExampleInput" class="text-primary">Descripción</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" class="form-control" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Descripcion" placeholder="Descripción">
                            </div>                         
                            <div class="row justify-content-center">
                                <label for="formGroupExampleInput" class="text-primary">Estatus</label>
                            </div>
                            <!--
    <div class="row justify-content-center">
        <input type="text" class="form-control" id="formGroupExampleInput" ng-model="item.Status" placeholder="Estatus">
    </div>
    -->
                            <div class="row justify-content-center">
                                <select class="form-control" name="cmbDependencia_status" ng-model="ctrl.unidad[0].Status">
                                    <option selected value="A">Alta</option>
                                    <option selected value="B">Baja</option>
                                </select>

                            </div>

                            <div class="row justify-content-center">
                                <label for="formGroupExampleInput" class="text-primary">Coordinador</label>
                            </div>
                            <div class="row justify-content-center">
                                <input type="text" class="form-control" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Coordinador" placeholder="Coordinador">
                            </div>
                    
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="ctrl.Inicio()" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="ctrl.UnidadResponsableUpdate()">Save changes</button>
                </div>
            </div>
        </div>
    </div>




    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblDependencia" class="text-primary">Dependencia:</label>

                    <select class="form-control" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                        <option value="0">--Seleccionar Dependencia--</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblStatus">Busqueda</label>
                    <input type="text" class="form-control" placeholder="Busqueda" ng-model="buscar">
                    <!--<input name="rbActivo" id="1" type="radio" /><label for="1">Activo</label>&nbsp;&nbsp;<input name="rbBaja" id="2" type="radio" /><label for="2">Baja</label>-->
                </div>               
            </div>
        </div>
    </div>

