<div class="panel panel-default panel-table">
    @*<h3 class="panel-title input-group-text">Viaticos Asignados</h3><input type="button" class="btn btn-sm btn-primary btn-create" data-toggle="modal" data-target="#InfViaticos" />Nuevo<i class="fa fa-plus" aria-hidden="true"></i>*@
    <div class="panel-heading">
        <div class="container">
            <div class="col text-right">
                <button type="button" class="btn btn-sm btn-success btn-create" data-toggle="modal" data-target="#UnidadesResponsablesCreate" style="width:80px"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo</button>
                <br />
            </div>
        </div>
    </div>          

    <div class="container table-responsive" style="box-shadow: 10px 40px 96px rgba(0,0,0,.3)">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Dependencia</th>
                    <th scope="col">
                        <a href="" ng-click="sortType = 'Clave'; sortReverse = !sortReverse">
                            Clave
                            <span ng-class="sortType == 'Clave' && !sortReverse ? 'arrow arrow-down' : sortType == 'id' && sortReverse ? 'arrow arrow-up': ''"></span>
                        </a>
                    </th>
                    <th scope="col">
                        <a href="" ng-click="sortType = 'Descripcion'; sortReverse = !sortReverse">
                            Descripción
                            <span ng-class="sortType == 'Descripcion' && !sortReverse ? 'arrow arrow-down' : sortType == 'id' && sortReverse ? 'arrow arrow-up': ''"></span>
                        </a>
                    </th>
                    <th scope="col">
                        <a href="" ng-click="sortType = 'Status'; sortReverse = !sortReverse">
                            Estatus
                            <span ng-class="sortType == 'Status' && !sortReverse ? 'arrow arrow-down' : sortType == 'id' && sortReverse ? 'arrow arrow-up': ''"></span>
                        </a>
                    </th>
                    <th scope="col">
                        <a href="" ng-click="sortType = 'Coordinador'; sortReverse = !sortReverse">
                            Coordinador
                            <span ng-class="sortType == 'Coordinador' && !sortReverse ? 'arrow arrow-down' : sortType == 'id' && sortReverse ? 'arrow arrow-up': ''"></span>
                        </a>
                    </th>

                    <th style="text-align:center"><em class="fa fa-cog"></em></th>
                </tr>
            </thead>
            <tbody ng-repeat="i in ctrl.unidades | orderBy:sortType:sortReverse | filter:buscar">
                <tr>
                    <td>{{i.Dependencia}}</td>
                    <td>{{i.Clave}}</td>
                    <td>{{i.Descripcion}}</td>
                    <td>{{i.Status}}</td>
                    <td>{{i.Coordinador}}</td>


                    <td style="text-align:center">
                        <!--data-toggle="modal" data-target="#UnidadesResponsables"-->
                        <button type="button" class="btn btn-primary" style="width:50px" data-toggle="modal" data-target="#UnidadesResponsablesUpdate" ng-click="ctrl.Modal(i.Id)">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </button>

                        <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarBasico($index)" style="width:50px">
                            <i class="fa fa-eraser" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th style="text-align:center">
                        <button type="button" class="btn btn-danger" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-success" ng-click="ctrl.BorrarImpViatico($index)" style="width:50px">
                            <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                        </button>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
