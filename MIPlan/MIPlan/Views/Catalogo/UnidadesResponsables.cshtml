
@{
    ViewBag.Title = "UnidadesResponsables";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";

}

<h2>UnidadesResponsables</h2>
<br />
<br />
<br />


<div ng-app="MIPlanWeb" ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">

    <!-- Modal Create-->
    <div class="modal fade border border-success" id="UnidadesResponsablesCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header btn-success justify-content-center">
                    <h5 class="modal-title" id="exampleModalLabel">Crear Unidad Responsable</h5>
                    <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="container-fluid">

                        <div class="row justify-content-center">
                            <label for="lblDependencia" class="text-success">Dependencia:</label>
                        </div>
                        <div class="row justify-content-center">
                            <select class="form-control border border-success" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.unidad[0].Dependencia">
                                <option value="">--Seleccionar Dependencia--</option>
                            </select>
                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-success">Clave</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-success" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Clave" placeholder="Clave">
                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-success">Descripción</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-success" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Descripcion" placeholder="Descripción">
                        </div>
                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-success">Estatus</label>
                        </div>                     
                        <div class="row justify-content-center">
                            <select class="form-control border border-success" name="cmbDependencia_status" ng-model="ctrl.unidad[0].Status">
                                <option value="">--Seleccionar Estatus--</option>
                                <option value="A">Alta</option>
                                <option value="B">Baja</option>
                            </select>

                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-success">Coordinador</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-success" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Coordinador" placeholder="Coordinador">
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="ctrl.Inicio()" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" ng-click="ctrl.UnidadResponsableCreate()">Crear Unidad</button>
                </div>
            </div>
        </div>
    </div>
    <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
    <!-- Modal Update-->
    <div class="modal fade" id="UnidadesResponsablesUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header btn-primary justify-content-center">
                    <h5 class="modal-title" id="exampleModalLabel">Actualizar Unidad Responsable</h5>
                    <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="container-fluid">

                        <div class="row justify-content-center">
                            <label for="lblDependencia" class="text-primary">Dependencia:</label>
                        </div>
                        <div class="row justify-content-center">
                            <select class="form-control border border-primary" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.unidad[0].Dependencia">
                                <option value="">--Seleccionar Dependencia--</option>
                            </select>
                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-primary">Clave</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-primary" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Clave" placeholder="Clave">
                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-primary">Descripción</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-primary" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Descripcion" placeholder="Descripción">
                        </div>
                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-primary">Estatus</label>
                        </div>                        
                        <div class="row justify-content-center">
                            <select class="form-control border border-primary" name="cmbDependencia_status" ng-model="ctrl.unidad[0].Status">
                                <option value="">--Seleccionar Estatus--</option>
                                <option value="A">Alta</option>
                                <option value="B">Baja</option>
                            </select>

                        </div>

                        <div class="row justify-content-center">
                            <label for="formGroupExampleInput" class="text-primary">Coordinador</label>
                        </div>
                        <div class="row justify-content-center">
                            <input type="text" class="form-control border border-primary" id="formGroupExampleInput" ng-model="ctrl.unidad[0].Coordinador" placeholder="Coordinador">
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="ctrl.Inicio()" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" ng-click="ctrl.UnidadResponsableUpdate()">Actualizar Datos</button>
                </div>
            </div>
        </div>
    </div>
<!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->


    <div class="container" >
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblDependencia" class="text-primary">Dependencia:</label>
                    <select class="form-control border border-primary" name="cmbDependencia" ng-change="ctrl.ValorDependencia()" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.cve_dependencia">
                        <option value="">--Seleccionar Dependencia--</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="lblStatus" class="text-success">Busqueda</label>
                    <input type="text" class="form-control border border-success" placeholder="Busqueda" ng-model="buscar">
                    <!--<input name="rbActivo" id="1" type="radio" /><label for="1">Activo</label>&nbsp;&nbsp;<input name="rbBaja" id="2" type="radio" /><label for="2">Baja</label>-->
                </div>
            </div>
        </div>
    </div>

