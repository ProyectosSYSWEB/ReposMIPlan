
@{
    ViewBag.Title = "Configuracion";
    Layout = "~/Views/Shared/_LayoutContenido.cshtml";
}

<h2>Configuracion</h2>

<br />
<br />
<br />
<br />

<div ng-controller="MIPlanController as ctrl" ng-init="ctrl.Inicio()">
    <!--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
    <div class="container">


        <div id="Error" class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none">
            <strong id="Message">¡Ha ocurrido un error! </strong>
            <button type="button" class="close" ng-click="ctrl.DivError()" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>


        <div class="row">


            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="" class="text-primary">
                        Dependencia
                    </label>
                    <select id="cmbDependencia" class="form-control border border-primary" name="cmbDependencia" ng-options="option.Id as option.Descripcion for option in ctrl.dependencias" ng-model="ctrl.D" required>
                        <option value="">--Seleccionar Dependencia--</option>
                    </select>
                </div>
            </div>




            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">

                <div class="form-group">
                    <label for="" class="text-primary">
                        Clave Cuestionario Electronico 911
                    </label>
                    <input type="text" class="form-control border border-primary" placeholder=" clave">

                </div>
            </div>

            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->

            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="form-group">
                    <label for="" class="text-primary">
                        Seleccionar Registro DES PFCE
                    </label>
                    <select name="" id="" class="form-control border border-primary">
                        <option selected>Combo DES-PFCE...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>


                </div>

            </div>


            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->

            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="" class="text-primary">
                        Municipio
                    </label>
                    <select name="" id="" class="form-control border border-primary">
                        <option selected>Seleccionar Municipio...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>


                </div>
            </div>


            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label for="" class="text-primary">
                        Región
                    </label>
                    <select name="" id="" class="form-control border-primary">
                        <option selected>Seleccionar Región...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

            </div>

            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <label for="" class="text-primary ">
                        Antecedentes
                    </label>
                    <textarea name="" id="" cols="30" rows="5" class="form-control border border-primary" placeholder=" para la fundacion de la UNACH"></textarea>

                </div>
            </div>

            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->

            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="col text-right">
                    <button class="btn btn-primary">
                        Guardar
                    </button>

                    <button class="btn btn-danger">
                        Salir
                    </button>
                </div>
            </div>

            <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->

        </div>
    </div>
    <!-------------------------------------------------------------------------------------------------------------------------------------------------------------->
</div>

<br />
<br />
